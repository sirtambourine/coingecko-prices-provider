{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "lib",
    "rootDir": "./src",
    "baseUrl": "./",
    "allowJs": true,
    "removeComments": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "types": ["types/*", "node", "react"],
      "*": ["src/*"]
    },
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "typeRoots": [
      "./types"
    ],
    "sourceMap": false,
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src",
  ],
}